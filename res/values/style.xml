<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="IMonAirTitleBackground">
		<item name="android:background">#323331</item>
    </style>
    <style name="IMonAirWindowTitleText" parent="android:TextAppearance.WindowTitle">
		<item name="android:textColor">#dddddd</item>
	</style>
	
	<style name="IMonAirWindowTitle" parent="android:WindowTitle">
          <item name="android:textAppearance">@style/IMonAirWindowTitleText</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
       	<item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">#222222</item>
		<item name="android:paddingLeft">5dip</item>
      </style>
      
    <style name="IMonAirTheme" parent="android:Theme">
    	<item name="android:windowTitleSize">24dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/IMonAirTitleBackground</item>
        <item name="android:windowTitleStyle">@style/IMonAirWindowTitle</item>        
    </style>
</resources>